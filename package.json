{
  "type": "module",
  "exports": {
    ".": {
      "import": "./public/binding.js"
    }
  },
  "devDependencies": {
    "@swc/core": "^1.3.23",
    "@swc/jest": "^0.2.24",
    "assemblyscript": "^0.25.1",
    "copyfiles": "^2.4.1",
    "jest": "^29.2.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "wmr": "^3.7.2"
  },
  "scripts": {
    "asbuild:debug": "asc assembly/index.ts --target debug",
    "asbuild:release": "asc assembly/index.ts --target release",
    "asbuild:watch": "nodemon -w assembly --exec 'npm run asbuild'",
    "asbuild": "run-s asbuild:debug asbuild:release asbuild:fix:*",
    "asbuild:fix:debug": "sed -i .bak 's/debug.wasm/.\\/debug.wasm/g' public/build/debug.js",
    "asbuild:fix:release": "sed -i .bak 's/release.wasm/.\\/release.wasm/g' public/build/release.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "dev": "run-p asbuild:watch dev:wmr",
    "dev:wmr": "wmr",
    "build:copy": "copyfiles public/build/* dist -u 1",
    "build:wmr": "wmr build",
    "build": "run-s asbuild build:wmr build:copy",
    "start": "wmr serve"
  },
  "dependencies": {
    "assemblyscript-json": "^1.1.0"
  },
  "wallaby": {
    "env": {
      "params": {
        "runner": "--experimental-vm-modules"
      }
    }
  }
}
