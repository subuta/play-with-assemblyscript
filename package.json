{
  "type": "module",
  "exports": {
    ".": {
      "import": "./public/binding.js"
    }
  },
  "devDependencies": {
    "@swc/core": "^1.3.23",
    "@swc/jest": "^0.2.24",
    "assemblyscript": "^0.25.1",
    "copyfiles": "^2.4.1",
    "jest": "^29.2.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "wmr": "^3.7.2"
  },
  "scripts": {
    "asbuild:debug": "asc assembly/index.ts --target debug",
    "asbuild:release": "asc assembly/index.ts --target release",
    "asbuild:watch": "nodemon -e ts --exec 'npm run asbuild'",
    "asbuild": "run-p asbuild:debug asbuild:release",
    "test": "jest",
    "dev": "run-p asbuild:watch dev:wmr",
    "dev:wmr": "wmr",
    "build:copy": "copyfiles public/build/* dist -u 1",
    "build:wmr": "wmr build",
    "build": "run-s asbuild build:wmr build:copy",
    "start": "wmr serve"
  }
}
